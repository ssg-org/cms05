<div class="span12">
  <%=link_to "Upload new media", new_admin_medium_path(), :class => 'btn' %>
  <br/><br/>
  <table class="table table-condensed ">
    <tr>
      <td>Image</td>
    	<td>Title</td>
    	<td>URL</td>
      <td>Size</td>
    </tr>	
    <% @media.each do |m| %>
    	<tr>
        <td><%= image_tag m.attachment, :style => 'height:50px;' %></td>
        <td><%= m.title %></td>
    		<td><%= link_to 'URL', m.attachment.url %></td>
        <td><%= m.attachment_file_size %></td>
    	</tr>
    <% end %>
  </table>
</div>